@page "/applications"
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.QuickGrid
@using PetHouse.Models
@using PetHouse.Data
@implements IAsyncDisposable
@inject IDbContextFactory<PetHouse.Data.PetHouseContext> DbFactory

<PageTitle>Index</PageTitle>

<h1>Index</h1>

<p>
    <a href="applications/create">Create New</a>
</p>

<QuickGrid Class="table" Items="context.Application">
    <PropertyColumn Property="application => application.DateSubmission" />
    <PropertyColumn Property="application => application.SubmissionMessage" />
    <PropertyColumn Property="application => application.DateEvaluation" />
    <PropertyColumn Property="application => application.EvaluationMessage" />
    <PropertyColumn Property="application => application.Status" />

    <TemplateColumn Context="application">
        <a href="@($"applications/edit?id={application.Id}")">Edit</a> |
        <a href="@($"applications/details?id={application.Id}")">Details</a> |
        <a href="@($"applications/delete?id={application.Id}")">Delete</a>
    </TemplateColumn>
</QuickGrid>

@code {
    private PetHouseContext context = default!;

    protected override void OnInitialized()
    {
        context = DbFactory.CreateDbContext();
    }

    public async ValueTask DisposeAsync() => await context.DisposeAsync();
}
